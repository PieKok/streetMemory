<RootWidget>:
    HomeScreen:
        name: "home_screen"
        id: screen_home
    PlayScreen:
        name: "play_screen"
        id: screen_play

<HomeScreen>:
    GridLayout:
        spacing: "10dp"
        padding: "20dp"
        cols: 1

        MDLabel:
            text: "In which area do you want to play?"
            font_size: 40
            pos_hint: {'center_x':0.5, 'center_y':0.8}

        MDTextField:
            id: area_text_field
            text: "Leiden Hoogstraat"
            font_size: 30
            pos_hint: {'center_x':0.5, 'center_y':0.7}

        RelativeLayout:
            MDFillRoundFlatButton:
                text: "Play"
                font_size: 20
                pos_hint: {'center_x':0.5}
                on_press: root.action_play_button()
