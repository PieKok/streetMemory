#:include memorymapview.kv

<PlayScreen>:
    GridLayout:
        spacing: "20dp"
        cols: 1

        MDToolbar:
            id: toolbar
            title: 'Play Screen'
            left_action_items: [["arrow-left", lambda x: app.change_screen('home_screen','right')]]
            right_action_items: [["play", lambda x: root.actionButton() ]]

        MDLabel:
            id: id_street_text
            text: "  >> press play <<"
            size_hint: (1,0.05)

        MemoryMapView:
            id: mapViewer


<ResultDialogContent>:
    orientation: "horizontal"
    spacing: "10dp"
    size_hint_y: None

    MDLabel:
        id: id_result_text
        pos_hint: {"center_y": .5}